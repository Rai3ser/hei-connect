- model_class = Course
.content-box
  .content-box-header
    =t '.title', :default => model_class.model_name.human
  .padded
    %p
      %strong= model_class.human_attribute_name(:date) + ':'
      %br
      = @course.date
    %p
      %strong= model_class.human_attribute_name(:length) + ':'
      %br
      = @course.length
    %p
      %strong= model_class.human_attribute_name(:kind) + ':'
      %br
      = @course.kind
    %p
      %strong= model_class.human_attribute_name(:ecampus_id) + ':'
      %br
      = @course.ecampus_id
    %p
      %strong= model_class.human_attribute_name(:section_id) + ':'
      %br
      = @course.section_id
    %p
      %strong= model_class.human_attribute_name(:group_id) + ':'
      %br
      = @course.group_id
    %p
      %strong= model_class.human_attribute_name(:broken_name) + ':'
      %br
      = @course.broken_name

    .form-actions
      = link_to t('.back', :default => t("helpers.links.back")), admin_courses_path, :class => 'btn'
      = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_course_path(@course), :class => 'btn'
      = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_course_path(@course), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
