- url = admin_course_users_path
- url = admin_course_user_path(@course_user) unless @course_user.new_record?

= simple_form_for @course_user, :url => url, :html => { :class => 'form-horizontal' } do |f|
  = f.input :update_number
  = f.input :course_id
  = f.input :user_id
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), admin_course_users_path, :class => 'btn'
