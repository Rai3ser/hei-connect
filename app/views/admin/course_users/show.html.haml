- model_class = CourseUser
.content-box
  .content-box-header
    =t '.title', :default => model_class.model_name.human
  .padded
    %p
      %strong= model_class.human_attribute_name(:update_number) + ':'
      %br
      = @course_user.update_number
    %p
      %strong= model_class.human_attribute_name(:course_id) + ':'
      %br
      = @course_user.course_id
    %p
      %strong= model_class.human_attribute_name(:user_id) + ':'
      %br
      = @course_user.user_id

    .form-actions
      = link_to t('.back', :default => t("helpers.links.back")), admin_course_users_path, :class => 'btn'
      = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_course_user_path(@course_user), :class => 'btn'
      = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_course_user_path(@course_user), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
