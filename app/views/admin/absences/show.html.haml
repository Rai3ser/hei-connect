- model_class = Absence
.content-box
  .content-box-header
    =t '.title', :default => model_class.model_name.human
  .padded
    %p
      %strong= model_class.human_attribute_name(:date) + ':'
      %br
      = @absence.date
    %p
      %strong= model_class.human_attribute_name(:length) + ':'
      %br
      = @absence.length
    %p
      %strong= model_class.human_attribute_name(:excused) + ':'
      %br
      = @absence.excused
    %p
      %strong= model_class.human_attribute_name(:justification) + ':'
      %br
      = @absence.justification
    %p
      %strong= model_class.human_attribute_name(:update_number) + ':'
      %br
      = @absence.update_number
    %p
      %strong= model_class.human_attribute_name(:section_id) + ':'
      %br
      = @absence.section_id
    %p
      %strong= model_class.human_attribute_name(:user_session_id) + ':'
      %br
      = @absence.user_session_id

    .form-actions
      = link_to t('.back', :default => t("helpers.links.back")), admin_absences_path, :class => 'btn'
      = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_absence_path(@absence), :class => 'btn'
      = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_absence_path(@absence), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
