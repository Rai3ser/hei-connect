- model_class = Exam
.content-box
  .content-box-header
    =t '.title', :default => model_class.model_name.human
  .padded
    %p
      %strong= model_class.human_attribute_name(:name) + ':'
      %br
      = @exam.name
    %p
      %strong= model_class.human_attribute_name(:date) + ':'
      %br
      = @exam.date
    %p
      %strong= model_class.human_attribute_name(:kind) + ':'
      %br
      = @exam.kind
    %p
      %strong= model_class.human_attribute_name(:weight) + ':'
      %br
      = @exam.weight
    %p
      %strong= model_class.human_attribute_name(:average) + ':'
      %br
      = @exam.average
    %p
      %strong= model_class.human_attribute_name(:section_id) + ':'
      %br
      = @exam.section_id

    .form-actions
      = link_to t('.back', :default => t("helpers.links.back")), admin_exams_path, :class => 'btn'
      = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_exam_path(@exam), :class => 'btn'
      = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_exam_path(@exam), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
