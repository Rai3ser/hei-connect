- model_class = Update
.content-box
  .content-box-header
    =t '.title', :default => model_class.model_name.human
  .padded
    %p
      %strong= model_class.human_attribute_name(:object) + ':'
      %br
      = @update.object
    %p
      %strong= model_class.human_attribute_name(:state) + ':'
      %br
      = @update.state
    %p
      %strong= model_class.human_attribute_name(:rev) + ':'
      %br
      = @update.rev
    %p
      %strong= model_class.human_attribute_name(:user_id) + ':'
      %br
      = @update.user_id

    .form-actions
      = link_to t('.back', :default => t("helpers.links.back")), admin_updates_path, :class => 'btn'
      = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_update_path(@update), :class => 'btn'
      = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_update_path(@update), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
