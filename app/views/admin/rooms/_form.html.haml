- url = admin_rooms_path
- url = admin_room_path(@room) unless @room.new_record?

= simple_form_for @room, :url => url, :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), admin_rooms_path, :class => 'btn'
