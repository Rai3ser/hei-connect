- model_class = CourseTeacher
.content-box
  .content-box-header
    =t '.title', :default => model_class.model_name.human
  .padded
    %p
      %strong= model_class.human_attribute_name(:course_id) + ':'
      %br
      = @course_teacher.course_id
    %p
      %strong= model_class.human_attribute_name(:teacher_id) + ':'
      %br
      = @course_teacher.teacher_id

    .form-actions
      = link_to t('.back', :default => t("helpers.links.back")), admin_course_teachers_path, :class => 'btn'
      = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_course_teacher_path(@course_teacher), :class => 'btn'
      = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_course_teacher_path(@course_teacher), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
