- model_class = User
.content-box
  .content-box-header
    =t '.title', :default => model_class.model_name.human
  .padded
    %p
      %strong= model_class.human_attribute_name(:ecampus_id) + ':'
      %br
      = @user.ecampus_id
    %p
      %strong= model_class.human_attribute_name(:ics_key) + ':'
      %br
      = @user.ics_key
    %p
      %strong= model_class.human_attribute_name(:password_digest) + ':'
      %br
      = @user.password_digest
    %p
      %strong= model_class.human_attribute_name(:token) + ':'
      %br
      = @user.token
    %p
      %strong= model_class.human_attribute_name(:last_activity) + ':'
      %br
      = @user.last_activity
    %p
      %strong= model_class.human_attribute_name(:admin) + ':'
      %br
      = @user.admin

    .form-actions
      = link_to t('.back', :default => t("helpers.links.back")), admin_users_path, :class => 'btn'
      = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_user_path(@user), :class => 'btn'
      = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_user_path(@user), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
