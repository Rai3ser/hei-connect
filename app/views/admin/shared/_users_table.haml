- model_class = User
%table.table.table-bordered.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:ecampus_id)
      %th= model_class.human_attribute_name(:ics_key)
      %th= model_class.human_attribute_name(:password_digest)
      %th= model_class.human_attribute_name(:token)
      %th= model_class.human_attribute_name(:last_activity)
      %th= model_class.human_attribute_name(:admin)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - users.each do |user|
      %tr
        %td= link_to user.id, admin_user_path(user)
        %td= user.ecampus_id
        %td= user.ics_key
        %td= user.password_digest
        %td= user.token
        %td= user.last_activity
        %td=# user.admin
        %td=l user.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_user_path(user), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_user_path(user), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'