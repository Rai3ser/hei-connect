- model_class = Update
%table.table.table-bordered.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:object)
      %th= model_class.human_attribute_name(:state)
      %th= model_class.human_attribute_name(:rev)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - updates.each do |update|
      %tr
        %td= link_to update.id, admin_update_path(update)
        %td= update.object
        %td= update.state
        %td= update.rev
        %td= update.user_id
        %td=l update.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_update_path(update), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_update_path(update), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'