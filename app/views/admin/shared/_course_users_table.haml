- model_class = CourseUser
%table.table.table-bordered.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:update_number)
      %th= model_class.human_attribute_name(:course_id)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - course_users.each do |course_user|
      %tr
        %td= link_to course_user.id, admin_course_user_path(course_user)
        %td= course_user.update_number
        %td= course_user.course_id
        %td= course_user.user_id
        %td=l course_user.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_course_user_path(course_user), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_course_user_path(course_user), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'