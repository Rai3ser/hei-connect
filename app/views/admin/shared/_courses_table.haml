- model_class = Course
%table.table.table-bordered.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:date)
      %th= model_class.human_attribute_name(:length)
      %th= model_class.human_attribute_name(:kind)
      %th= model_class.human_attribute_name(:ecampus_id)
      %th= model_class.human_attribute_name(:section_id)
      %th= model_class.human_attribute_name(:group_id)
      %th= model_class.human_attribute_name(:broken_name)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - courses.each do |course|
      %tr
        %td= link_to course.id, admin_course_path(course)
        %td= course.date
        %td= course.length
        %td= course.kind
        %td= course.ecampus_id
        %td= course.section_id
        %td= course.group_id
        %td= course.broken_name
        %td=l course.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_course_path(course), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_course_path(course), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'