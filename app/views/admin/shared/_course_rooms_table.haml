- model_class = CourseRoom
%table.table.table-bordered.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:course_id)
      %th= model_class.human_attribute_name(:room_id)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - course_rooms.each do |course_room|
      %tr
        %td= link_to course_room.id, admin_course_room_path(course_room)
        %td= course_room.course_id
        %td= course_room.room_id
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_course_room_path(course_room), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_course_room_path(course_room), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'