- model_class = Section
.content-box
  .content-box-header
    =t '.title', :default => model_class.model_name.human
  .padded
    %p
      %strong= model_class.human_attribute_name(:name) + ':'
      %br
      = @section.name

    .form-actions
      = link_to t('.back', :default => t("helpers.links.back")), admin_sections_path, :class => 'btn'
      = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_section_path(@section), :class => 'btn'
      = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_section_path(@section), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
