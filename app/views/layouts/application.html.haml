!!! 5
%html(lang="fr")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, maximum-scale=1, initial-scale=1, user-scalable=0")
    %title= content_for?(:title) ? yield(:title) : "HEI-Connect"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag 'http://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js'
      = javascript_include_tag 'excanvas'
      = javascript_include_tag 'ie_fix'
      = stylesheet_link_tag 'ie_fix', :media => 'all'
    = stylesheet_link_tag 'app', :media => 'all'


  %body#body{'data-controller' => controller_name, 'data-action' => action_name}

    = render partial: 'layouts/navigation'

    %section#main
      .container
        .row-fluid
          .span12
            = bootstrap_flash
            = yield


    = render partial: 'layouts/footer'

    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = yield :scripts
    = javascript_include_tag 'app'
    = render partial: 'layouts/uservoice'

