!!! 5
%html(lang="fr")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, maximum-scale=1, initial-scale=1, user-scalable=0")
    = csrf_meta_tags
    %link(href="#{image_path('favicon')}" rel="icon")
    %link(href="#{image_path('apple-touch-logo')}" rel="apple-touch-icon")
    %link(href="#{image_path('play-store-logo')}" rel="android-touch-icon")

    %title= content_for?(:title) ? yield(:title) : 'HEI-Connect'

    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js'
      = javascript_include_tag 'excanvas'
    = stylesheet_link_tag 'app', :media => 'all'


  %body#body{'data-controller' => controller_name, 'data-action' => action_name}

    = render partial: 'layouts/navigation'
    = render partial: 'layouts/mobile_banner'

    %section#main
      .container
        .row
          .col-md-12
            = bootstrap_flash
            = yield


    = render partial: 'layouts/footer'

    / Javascripts
    = yield :scripts
    = javascript_include_tag 'app'
    = render partial: 'layouts/uservoice'
    = render partial: 'layouts/analytics'
